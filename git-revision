#!/bin/bash

# shellcheck disable=SC1091,SC2034

set -o errexit
set -o nounset
set -o pipefail

. bash_template.sh
. fs4git.sh

SCRIPT_DESCRIPTION="make new revision"
SCRIPT_FULL_DESCRIPTION="-"
SCRIPT_ARGUMENTS="[OPTION]... MESSAGE [FILE]..."
SCRIPT_OPTIONS=(\
    "-d DATE, --date=DATE"\
    "-v, --verbose"\
    "--help"\
    "--version"\
)
SCRIPT_OPTION_DESCRIPTIONS=(\
    "date format is YYYY-mm-ddTHH:MM:SS"\
    "explain what is being done"\
    "display this help and exit"\
    "output version information and exit"\
)
SCRIPT_EXAMPLES=(\
    "MESSAGE"\
)
SCRIPT_SEE_ALSO=(\
    "git-join(1)"\
    "git-logs(1)"\
    "git-redate(1)"\
    "git-save(1)"\
)

### D E F A U L T   V A L U E S ###
ORIGIN_HASH=$(commitHash HEAD || echo "no commits yet")

# We use "$@" instead of $* to preserve argument-boundary information
# Add : to suppress getopt error messages, i.e. getopt -o ':...'
ARGS=$(getopt -o 'd:v' --long 'date:,verbose,help,version,update-manual' -- "$@") || { usage ; exit 1 ; }
eval "set -- $ARGS"

while true; do
    case $1 in
        (-d|--date)
            isValidDate "$2" || { error "date format is YYYY-mm-ddTHH:MM:SS" ; usage ; exit 1 ; }
            export GIT_AUTHOR_DATE=$2
            export GIT_COMMITTER_DATE=$2
            shift 2 ;;
        (-v|--verbose)
            VERBOSE= ; shift ;;
        (--help)
            usageFull ; exit 0 ;;
        (--version)
            about ; changelog ; exit 0 ;;
        (--update-manual) # hidden option
            updateManual ; exit 0 ;;
        (--)
            shift ; break ;;
        (*)
            usage ; exit 1 ;;
    esac
done

REMAINING_ARGS=("$@")

main() {
    if [[ ${#REMAINING_ARGS[@]} -lt 1 ]] ; then
        error "required parameters not supplied" ; usage ; exit 1
    fi
    local MESSAGE=${REMAINING_ARGS[0]}

    if [[ -z ${VERBOSE+set} ]] ; then
        exec 3>&1 4>&2 1>/dev/null 2>&1
    fi &&\

    FILE=("${REMAINING_ARGS[@]:1}") &&\
    if [[ -n ${FILE[*]} ]] ; then
        git add -- "${FILE[@]}" || { error "file does not exist" ; return 1 ; }
    else
        git add -A
    fi &&\

    git commit -S -s -m "$MESSAGE" &&\

    if [[ -z ${VERBOSE+set} ]] ; then
        exec 1>&3 2>&4
    fi &&\

    printf "* * * NEW REVISION DONE * * *\n\n" &&\
    git logs --hash HEAD
}

recover() {
    export GIT_AUTHOR_DATE=
    export GIT_COMMITTER_DATE=

    local REFLOG_HEAD
    REFLOG_HEAD=$(git reflog | grep "${ORIGIN_HASH:0:6}" | head -1 | awk '{ print substr($2, 0, length($2) - 1) }')
    git reset "$REFLOG_HEAD" --

    if [[ -n ${FILE[*]} ]] ; then
        git restore --staged -- "${FILE[@]}" || { error "file does not exist" ; }
    else
        git restore --staged -- .
    fi

    if [[ -z ${VERBOSE+set} ]] ; then
        exec 1>&3 2>&4
    fi

    error "recovered at $ORIGIN_HASH" ; usage ; exit 1
}

trap recover SIGINT

main || recover
