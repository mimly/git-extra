#!/bin/bash

# shellcheck disable=SC1091,SC2034

set -o errexit
set -o nounset
set -o pipefail

. bash_template.sh
. fs4git.sh

SCRIPT_DESCRIPTION="update current revision"
SCRIPT_FULL_DESCRIPTION="-"
SCRIPT_ARGUMENTS="[OPTION]... [FILE]..."
SCRIPT_OPTIONS=(\
    "--now"\
    "--then"\
    "-d DATE, --date=DATE"\
    "-m MESSAGE, --message=MESSAGE"\
    "-v, --verbose"\
    "--help"\
    "--version"\
)
SCRIPT_OPTION_DESCRIPTIONS=(\
    "current date, default"\
    "last revision date"\
    "date format is YYYY-mm-ddTHH:MM:SS"\
    "date format is YYYY-mm-ddTHH:MM:SS"\
    ""\
    "explain what is being done"\
    "display this help and exit"\
    "output version information and exit"\
)
SCRIPT_EXAMPLES=(\
    ""\
)
SCRIPT_SEE_ALSO=(\
    "git-join(1)"\
    "git-logs(1)"\
    "git-redate(1)"\
    "git-revision(1)"\
)

### D E F A U L T   V A L U E S ###
ORIGIN_HASH=$(commitHash HEAD)

# We use "$@" instead of $* to preserve argument-boundary information
# Add : to suppress getopt error messages, i.e. getopt -o ':...'
ARGS=$(getopt -o 'd:m:v' --long 'now,then,date:,message:,verbose,help,version,update-manual' -- "$@") || { usage ; exit 1 ; }
eval "set -- $ARGS"

while true; do
    case $1 in
        (--now)
            DATE=$(date +%Y-%m-%dT%H:%M:%S --date now) ; shift ;;
        (--then)
            DATE=$(commitDate HEAD) ; shift ;;
        (-d|--date)
            isValidDate "$2" || { error "date format is YYYY-mm-ddTHH:MM:SS" ; usage ; exit 1 ; }
            DATE=$2 ; shift 2 ;;
        (-m|--message)
            MESSAGE=$2 ; shift 2 ;;
        (-v|--verbose)
            VERBOSE= ; shift ;;
        (--help)
            usageFull ; exit 0 ;;
        (--version)
            about ; changelog ; exit 0 ;;
        (--update-manual) # hidden option
            updateManual ; exit 0 ;;
        (--)
            shift ; break ;;
        (*)
            usage ; exit 1 ;;
    esac
done

REMAINING_ARGS=("$@")

main() {
    if [[ -z ${VERBOSE+set} ]] ; then
        exec 3>&1 4>&2 1>/dev/null 2>&1
    fi &&\

    FILE=("${REMAINING_ARGS[@]}") &&\
    if [[ -n ${FILE[*]} ]] ; then
        git add -- "${FILE[@]}" || { error "file does not exist" ; return 1 ; }
    else
        git add -A
    fi &&\

    export GIT_AUTHOR_DATE=${DATE-$(date +%Y-%m-%dT%H:%M:%S --date now)} &&\
    export GIT_COMMITTER_DATE=${DATE-$(date +%Y-%m-%dT%H:%M:%S --date now)} &&\
    git commit -S -s -m "${MESSAGE-$(commitMessage "$ORIGIN_HASH")}" --reset-author --amend --no-edit &&\

    if [[ -z ${VERBOSE+set} ]] ; then
        exec 1>&3 2>&4
    fi &&\

    printf "%s\n" "$(git logs --hash "$ORIGIN_HASH")"
    printf "* * * LAST REVISION UPDATED AS FOLLOWS * * *\n\n" &&\
    git logs --hash HEAD
}

recover() {
    export GIT_AUTHOR_DATE=
    export GIT_COMMITTER_DATE=

    local REFLOG_HEAD
    REFLOG_HEAD=$(git reflog | grep "${ORIGIN_HASH:0:6}" | head -1 | awk '{ print substr($2, 0, length($2) - 1) }')
    git reset "$REFLOG_HEAD" --

    if [[ -n ${FILE[*]} ]] ; then
        git restore --staged -- "${FILE[@]}" || { error "file does not exist" ; }
    else
        git restore --staged -- .
    fi

    if [[ -z ${VERBOSE+set} ]] ; then
        exec 1>&3 2>&4
    fi

    error "recovered at $ORIGIN_HASH" ; usage ; exit 1
}

trap recover SIGINT

main || recover
